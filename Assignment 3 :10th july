import java.util.*;
class conversion
{  
public static void main(String[] args) 
{ 
Scanner sc=new Scanner(System.in);
System.out.println("1.convert decimal to binary");
System.out.println("2.convert decimal to octal");
System.out.println("3.convert decimal to hexa");
int n=sc.nextInt();
switch(n)
{  
case 1: 
if(n==1)
System.out.print("Enter a decimal num:");
int d1=sc.nextInt();
String B=Integer.toBinaryString(d1);
System.out.println("Binary value:"+B);
break;  
case 2:  
if(n==2)
System.out.print("Enter a decimal num:");
int d2=sc.nextInt();
String O=Integer.toOctalString(d2);
System.out.println("Octal value:"+O);
break;  
case 3: 
if(n==3)
System.out.print("Enter a decimal num:");
int d3=sc.nextInt();
String H=Integer.toHexString(d3);
System.out.println("Hexa value:"+H);
break;  
default:
System.out.println("choose in 1,2,3");
}  
}  
}
