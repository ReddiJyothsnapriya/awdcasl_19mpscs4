import java.util.*;
class Amazon
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
String s=sc.next();
int i = 0;
int j = s.length() - 1;
for (;i < j && s.charAt(i) == s.charAt(j);)
{
char d = s.charAt(i);
while (i <= j&& s.charAt(i) == d)
i++;
while (i <= j&& s.charAt(j) == d)
j--;
}
System.out.print(j - i + 1);
}
}
